<div class="bg-white shadow-lg rounded-lg overflow-hidden">
  <div class="px-8 py-6 mb-4 text-gray-800 border-b">
    <h1 class="text-3xl font-extrabold mb-4">Your Cart</h1>
    <p class="text-lg font-semibold">Review your items below</p>
  </div>
  {{#each products}}
    <div class="px-8 py-4 border-b border-gray-100">
      <h2 class="text-xl font-semibold text-blue-600 mb-2">{{this.title}}</h2>
      <p class="text-gray-600 mb-1">{{this.description}}</p>
      <div class="flex justify-between items-center mb-2">
        <p class="text-lg font-bold text-green-600">${{this.price}}</p>
        <p class="text-md text-gray-500">Qty:
          <span class="font-semibold text-gray-700">{{this.quantity}}</span>
        </p>
      </div>
      <div class="flex justify-between items-center">
        <p class="text-sm text-gray-500">Available:
          <span class="font-semibold text-gray-700">{{this.stock}}</span>
        </p>
      </div>
    </div>
  {{/each}}
  <div class="px-8 py-6">
    <div class="flex justify-between items-center font-bold text-xl">
      <span>Total:</span>
      <span>${{total}}</span>
    </div>
    <button
      class="mt-6 w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition duration-300 ease-in-out"
      value="{{cartId}}"
      onclick="checkout(event)"
    >
      Proceed to Checkout
    </button>
  </div>
</div>
<script src="/js/cart.js"></script>