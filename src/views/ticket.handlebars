<div
  class="max-w-2xl mx-auto bg-white p-6 border border-gray-200 rounded-lg shadow-xl mt-10"
>
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-indigo-700">Ticket Details</h2>
  </div>

  <div class="mb-5">
    <h3 class="flex items-center text-gray-600 text-lg">

      Code
    </h3>
    <p class="text-gray-800 font-semibold mt-1">{{code}}</p>
  </div>

  <div class="mb-5">
    <h3 class="flex items-center text-gray-600 text-lg">
      Purchase Date and Time
    </h3>
    <p class="text-gray-800 font-semibold mt-1">{{purchase_datetime}}</p>
  </div>

  <div class="mb-5">
    <h3 class="flex items-center text-gray-600 text-lg">
      Amount
    </h3>
    <p class="text-gray-800 font-semibold mt-1">${{amount}}</p>
  </div>

  <div class="mb-5">
    <h3 class="flex items-center text-gray-600 text-lg">
      Purchaser
    </h3>
    <p class="text-gray-800 font-semibold mt-1">{{purchaser}}</p>
  </div>
</div>