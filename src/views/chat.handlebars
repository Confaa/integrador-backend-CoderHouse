<div
  id="chat-container"
  class="max-w-md mx-auto my-10 bg-white p-6 rounded-lg shadow-lg"
>
  <ul id="messages" class="list-none p-0 overflow-y-auto max-h-96 mb-4">
  </ul>
  <form id="form" data-user="{{user}}" class="flex gap-2">
    <input
      id="input"
      autocomplete="off"
      name="input"
      class="flex-1 border-2 p-2 rounded-md transition duration-150 ease-in-out focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
      placeholder="Type your message..."
    />
    <button
      type="submit"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition duration-150 ease-in-out focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50"
    >
      Send
    </button>
  </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>